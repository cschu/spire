{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://git.embl.de",
    "title": "SPIRE",
    "description": "This is v1 of the pipleine used to generate data on spire.embl.de",
    "definitions": {
        "input_output_options": {
            "title": "Input / Output options",
            "type": "object",
            "description": "General Input",
            "default": "",
            "properties": {
                "input_SRA_id": {
                    "type": "string",
                    "fa_icon": "fas fa-sign-in-alt",
                    "description": "SRA id of data to run the pipeline on"
                },
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "fa_icon": "fas fa-sign-out-alt",
                    "description": "Output directory where output is written to"
                }
            },
            "required": [
                "outdir",
                "input_SRA_id"
            ],
            "fa_icon": "fas fa-terminal"
        },
        "parameters": {
            "title": "Parameters",
            "type": "object",
            "description": "Optional Parameters",
            "default": "",
            "properties": {
                "NCBI_API_KEY": {
                    "type": "string",
                    "description": "NCBI API Key for downloading data",
                    "help_text": "Details: https://ncbiinsights.ncbi.nlm.nih.gov/2017/11/02/new-api-keys-for-the-e-utilities/",
                    "default": "none"
                },
                "gtdb_data_path": {
                    "type": "string",
                    "description": "Path to gtdb database directory",
                    "help_text": "This should be the root directory of gtdb database v214",
                    "default": ""
                },
                "checkm2db_path": {
                    "type": "string",
                    "description": "Path to gtdb database directory",
                    "help_text": "This should be the root directory of checkm2 db",
                    "default": ""
                },
                "guncdb_path": {
                    "type": "string",
                    "description": "Path to guncdb_path directory",
                    "help_text": "This should be the root directory of gunc db",
                    "default": ""
                },
                "eggnog-mapper": {
                    "type": "string",
                    "description": "Path to eggnog-mapper directory",
                    "help_text": "This should be the root directory of eggnog-mapper db",
                    "default": ""
                },
                "ngless_reference": {
                    "type": "string",
                    "description": "Path to ngless_reference directory",
                    "help_text": "This should be the root directory of ngless_reference ",
                    "default": ""
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/parameters"
        }
    ]
}
